<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
  </head>
  <body>
    <form method="POST" action="/recipes/<%=@recipe.id%>">
      <input id="hidden" type="hidden" name="_method" value="patch">
      <p>
        Recipe Name: <input type="text" id="name" name="recipe[name]" value="<%= @recipe.name%>">
      </p>
      <p>
        Recipe Ingredients: <input type="text" id="ingredients" name="recipe[ingredients]" value="<%= @recipe.ingredients%>">
      </p>
      <p>
        Recipe Cook Time:<input type="text" id="cook_time" name="recipe[cook_time]" value="<%= @recipe.cook_time%>">
      </p>
      <input type="submit" value="submit" id="submit">
    </form>
  </body>
</html>
